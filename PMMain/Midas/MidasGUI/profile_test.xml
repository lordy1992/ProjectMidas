                    </actions>
                </command>
            </sequence>
            <sequence state="keyboardMode" name="Keyboard to Mouse">
                <gestures>
                    <gesture type="tap">doubleTap</gesture>
                    <gesture type="tap">waveOut</gesture>
                </gestures>
